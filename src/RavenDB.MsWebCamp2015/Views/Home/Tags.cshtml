@model RavenDB.MsWebCamp2015.Models.HomeTagsViewModel

@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h1>@Model.CountPerTag.Keys.Count tags</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
				@foreach (var tagAndCount in @Model.CountPerTag)
				{
					<li class="list-group-item">
						<a asp-controller="Home" asp-action="speakers" asp-route-tag="@tagAndCount.Key">@tagAndCount.Key </a> <span class="badge">@tagAndCount.Value</span> </li>
				}
			</ul>
		</div>
	</div>
</div>